{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.ts",
    "types"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/test.ts",
  ],
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "rootDir": "src/",
    "outDir": "lib/",
    "declarationDir": "lib/"
  }
}
